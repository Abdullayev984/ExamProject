@model EntityLayer.DTOs.StudentDTOs.StudentToAddorUpdateDTO

<form asp-controller="Student" asp-action="AddStudent" method="post">

    <div class="form-group">

    <input type="number" asp-for="StudentId" class="form-control" id="name"  hidden>


    </div>
    <div class="form-group">
        <label>Ad</label>
        <input type="text" asp-for="StudentName" class="form-control" id="name" placeholder="Enter StudentName...">
        <span asp-validation-for="StudentName" style="color:red"></span>

    </div>
    <div class="form-group">
        <label>Soyadı</label>
        <input type="text" asp-for="StudentSurname" class="form-control" id="name" placeholder="Enter StudentSurname...">
        <span asp-validation-for="StudentSurname" style="color:red"></span>

    </div>
    <div class="form-group">
        <label>Sinifi</label>
        <input type="text" 
    asp-for="Grade" placeholder="Enter Grade..." maxlength="2" class="form-control">
 
        <span asp-validation-for="Grade" style="color:red"></span>

    </div>
    <br>
    <button type="submit" class="btn btn-primary">Create</button>
</form>